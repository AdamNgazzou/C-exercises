#include <stdio.h>
#include <stdlib.h>



void size (int* t,int n){
    
    t = (int *)malloc(n * sizeof(int));
    if (t == NULL) {
        printf("Memory allocation failed!\n");
        return ;
    }
}
void load (int* t,int n){
    for(int i; i<n;i++){
        printf("\nt[%d]=",i);
        scanf("%d",&t[i]);
    }
}
void display(int* t,int n){
    for(int i; i<n;i++){
        printf("\nt[%d]= %d",i,t[i]);
    }
}
int* seq(int* t ,int n ,int x){
    for(int i =0;i<n;i++){
        if(t[i]==x) return t+i ;
    }
    return NULL;
}
int maximum(int* t,int n,int* max){
    int index=0;
    int maxx=t[0];
    for(int i; i<n;i++){
        if(t[i]>maxx){
            maxx=t[i];
            index=i;
        }
    }
    max = t+index;
}
void main() {
    int *t,*max;
    int n,x;
    int * pos;
    do {
        printf("n = ");
        scanf("%d", &n);

    } while (n < 0 );
    size(t,n);
    load(t,n);
    display(t,n);
    printf("\nx=");
    scanf("%d",&x);
    pos=seq(t,n,x);
    if(pos==NULL) printf("\ndidn't found it");
    else printf("the adress of %d is %d\n",x,pos);
    maximum(t,n,max);
    printf("%d",*'max);
    
    
    
}



